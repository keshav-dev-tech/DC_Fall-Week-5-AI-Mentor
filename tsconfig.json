{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components"],
      "@components/atoms": ["src/components/atoms"],
      "@components/atoms/Avatar": ["src/components/atoms/Avatar"],
      "@components/molecules": ["src/components/molecules"],
      "@components/organisms": ["src/components/organisms"],
      "@features": ["src/features"],
      "@features/social/social/services": ["src/features/social/social/services"],
      "@store": ["src/store"],
      "@utils": ["src/utils"],
      "@types": ["src/types"],
      "@hooks": ["src/hooks"],
      "@services": ["src/services"],
      "@firebase": ["src/firebase"],
      "@mock": ["src/mock"],
      "@data": ["src/data"],
      "@styles": ["src/styles"],
      "@pages": ["src/pages"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "**/*.mjs", "postcss.config.cjs"],
  "exclude": ["node_modules"]
}
